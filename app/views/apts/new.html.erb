<h1>Add Appointment</h1>
<%= form_with(model: [@doctor, @patient, @apt], local: true, class: "ui form") do |f| %>
  <%= f.label :patient %>
  <%= f.select :patient_id, @patients.collect { |u| [u.full_name, u.id] } %>
  <br />
  <%= f.label :date %> & Time
  <%= f.datetime_field :date, required: true %>
  <br />
  <br />
  <%= f.submit "Create Appointment", class: "ui green button inverted" %>
<% end %>